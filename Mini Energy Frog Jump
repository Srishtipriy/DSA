#Mini Energy req frog jump (dp)
If the Frog is on 'ith' staircase, he can jump either to '(i+1)th' stair or to '(i+2)th' stair your task is to find mini energy req by frog //codestudio


#include <stdio.h>
#include<iostream>
#include<vector>
#include<algorithm>// min and max
#include<climits> // for INT_MAX
using namespace std;
int solve(vector<int> &nums , int n , vector<int>& dp){
    if( n== 0 )   return 0;

    if(dp[n] != -1)     return dp[n];

    int onejump = solve( nums , n-1 , dp ) + abs( nums[n] - nums[n-1]);
    int twojump = INT_MAX;
    if(n> 1){
        twojump =  solve( nums , n-2 , dp ) + abs( nums[n] - nums[n-2]); 
    }
    return dp[n]= min(onejump , twojump);
}

int frogjumpcost( vector<int> & nums){
    int n= nums.size();
    vector<int> dp (n+1 , -1);
    int ans = solve(nums , n-1 , dp );
    return ans <0 ? 0 : ans;
}

int main(){
    int n;
    cout<<"enter the size of arr";
    cin>> n;
    vector<int> nums(n);
    for(int i =0 ; i<n ; i++){
        cin>> nums[i];
    }
    int ans= frogjumpcost(nums);
    cout<<"the mini energy req by frog to cross is"<<ans<<endl;
    return 0;

}
